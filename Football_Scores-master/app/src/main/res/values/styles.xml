<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <!-- Style for listview -->
    <style name="FootballListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/light_grey</item>
        <item name="android:dividerHeight">1sp</item>
    </style>

    <style name="FootballWidgetTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

</resources>
